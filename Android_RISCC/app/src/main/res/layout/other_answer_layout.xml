<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/otherTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="@string/other"
        android:textColor="@color/black" />

<!--    android:background="@drawable/edittext_stroke_border"-->


    <EditText
        android:background="@drawable/edittext_white_background_no_border"
        android:id="@+id/answerET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/otherTV"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/yourAnswer"
        android:padding="10dp"
        android:textSize="@dimen/normal_text_size" />
</RelativeLayout>